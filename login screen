    private void jbtloginActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String pass=jpfpass.getText();
        String name=jtfname.getText();

        if (pass.contains("230399") && (name.contains("vijay")))
        {
            jtfname.setText(null);
            jpfpass.setText(null);

            mainScreen Screen = null;
            try {
                Screen = new mainScreen();
            } catch (IOException ex) {
                Logger.getLogger(loginScreen.class.getName()).log(Level.SEVERE, null, ex);
            }
            Screen.setVisible(true);
        }
        else{
            JOptionPane.showMessageDialog(null,"Invalid Login", "Login Error",JOptionPane.ERROR_MESSAGE);
            jtfname.setText(null);
            jpfpass.setText(null);
        }
    }                                        

    private void jbtcancelActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        System.exit(0);

    }                                         

